<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://supplierOrderBrowse.caption"
        focusComponent="supplierOrdersTable">
    <data readOnly="true">
        <collection id="supplierOrdersDc"
                    class="io.jmix.bookstore.product.supplier.SupplierOrder">
            <fetchPlan extends="_base">
                <property name="supplier" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="supplierOrdersDl">
                <query>
                    <![CDATA[select e from bookstore_SupplierOrder e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
        <notification id="supplierOrdersFromRequestsCreatedConfirmation" type="TRAY"
                      caption="msg://supplierOrdersFromRequestsCreatedConfirmation"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="supplierOrdersTable" spacing="true">
        <filter id="filter"
                dataLoader="supplierOrdersDl">
            <properties include=".*"/>
        </filter>
        <dataGrid id="supplierOrdersTable"
                  width="100%"
                  dataContainer="supplierOrdersDc">
            <actions>
                <action id="createSupplierOrdersFromRequests" icon="LIST_ALT"
                        caption="msg://createSupplierOrdersFromRequests"/>
                <action id="edit" type="edit"/>
            </actions>
            <columns>
                <column property="supplier" id="supplier"/>
                <column property="supplier.cooperationStatus" id="supplierCooperationStatus"/>
                <column property="status" id="status"/>
                <column property="orderDate" id="orderDate"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createSupplierOrdersFromRequestsBtn" primary="true" action="supplierOrdersTable.createSupplierOrdersFromRequests"/>
                <button id="editBtn" action="supplierOrdersTable.edit"/>
            </buttonsPanel>
        </dataGrid>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
